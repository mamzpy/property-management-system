{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": ["<rootDir>/test/jest.setup.ts"],
  "moduleNameMapper": {
    "^@shared/(.*)$": "<rootDir>/../../shared/$1"
  }
}